<div class="row related-content-slider" >
    <div class="col-12 gx-0">
        <div class="related-content-slider__header">
            <h3 class="related-content-slider__title">
                {{ relatedContentTitle }}
            </h3>
        </div>
    </div>
    <div class="col-12 gx-0">
        <div class="swiper swiper-container related-content-slider__swiper-container js-related-content-slider">
            <div class="swiper-wrapper">
                {% for i in range(1, 6) %}
                    <div class="swiper-slide related-content-slider__slide">
                        <div class="related-content-slider__content-header">
                            <img class="related-content-slider__content-image"
                                 src="/wp-content/uploads/2023/07/close-up-researcher-holding-glassware-1.jpg"
                                 alt="{{ product.get_title }}"
                                 loading="lazy"
                            />
                        </div>
                        <div class="related-content-slider__content-text">
                            <p class="related-content-slider__content-title">{{ relatedContentBtn }}</p>
                        </div>
                        <a href="{{ product.get_permalink() }}" class="related-content-slider__product-link"></a>
                    </div>
                {% endfor %}
            </div>
            <div class="related-content-slider__controls">
                <div class="related-content-slider__pagination"></div>
            </div>
        </div>
    </div>
</div>
